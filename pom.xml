<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>

    <groupId>ch.rogerjaeggi</groupId>
    <artifactId>test</artifactId>
    <version>1.7</version>
    <modules>
        <module>service</module>
        <module>web</module>
    </modules>

    <packaging>pom</packaging>

    <prerequisites>
        <maven>3.0.0</maven>
    </prerequisites>

    <scm>
        <connection>scm:git:ssh://github.com/jaeggir/intellijtest.git</connection>
        <developerConnection>scm:git:ssh://git@github.com/jaeggir/intellijtest.git</developerConnection>
        <url>https://github.com/jaeggir/intellijtest</url>
        <tag>test-1.7</tag>
    </scm>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.javadoc.skip>true</maven.javadoc.skip>
        <spring.version>4.1.4.RELEASE</spring.version>
        <javax-servlet.version>3.1.0</javax-servlet.version>

        <maven-compiler-plugin.version>3.2</maven-compiler-plugin.version>
        <maven-war-plugin.version>2.6</maven-war-plugin.version>
        <maven-release-plugin.version>2.5.1</maven-release-plugin.version>
    </properties>

    <distributionManagement>

        <repository>
            <id>avriosReleases</id>
            <name>Releases</name>
            <url>http://nexus.uht-traktor.ch/content/repositories/internal-repository</url>
        </repository>

        <snapshotRepository>
            <id>avriosSnapshots</id>
            <name>Snapshots</name>
            <url>http://nexus.uht-traktor.ch/content/repositories/internal-repository-snapshot</url>
        </snapshotRepository>

    </distributionManagement>

    <dependencyManagement>

        <!-- maven sub modules -->

        <dependencies>
            <dependency>
                <groupId>ch.rogerjaeggi</groupId>
                <artifactId>service</artifactId>
                <version>1.7</version>
            </dependency>
            <dependency>
                <groupId>ch.rogerjaeggi</groupId>
                <artifactId>web</artifactId>
                <version>1.7</version>
                <type>war</type>
            </dependency>

            <!-- Spring Framework -->

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-webmvc</artifactId>
                <version>${spring.version}</version>
            </dependency>

            <dependency>
                <groupId>org.springframework</groupId>
                <artifactId>spring-context</artifactId>
                <version>${spring.version}</version>
            </dependency>

            <dependency>
                <groupId>javax.servlet</groupId>
                <artifactId>javax.servlet-api</artifactId>
                <version>${javax-servlet.version}</version>
                <scope>provided</scope>
            </dependency>

        </dependencies>

    </dependencyManagement>

    <build>
        <plugins>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven-compiler-plugin.version}</version>
                <configuration>
                    <source>1.8</source>
                    <target>1.8</target>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>${maven-war-plugin.version}</version>
                <configuration>
                    <failOnMissingWebXml>false</failOnMissingWebXml>
                </configuration>
            </plugin>

            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-release-plugin</artifactId>
                <version>${maven-release-plugin.version}</version>
                <configuration>
                    <autoVersionSubmodules>true</autoVersionSubmodules>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>